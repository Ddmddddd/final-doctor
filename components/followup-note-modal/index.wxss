/* components/drug-add-modal/drug-add-modal.wxss */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    color: #fff;
}
  
.modal-dialog {
    width: 600rpx;
    overflow: hidden;
    position: fixed;
    top: 20%;
    left: 75rpx;
    background: #f9f9f9;
    border-radius: 20rpx;
}
  
.modal-title {
    padding-top: 40rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}
  
.modal-content {
    width: 90%;
    padding: 40rpx 5%;
}

.modal-content > textarea {
    border: 1px solid gray;
}

.modal-footer {
    display: flex;
    height: 90rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 90rpx;
}

  .modal-footer > view {
    width: 50%;
    color: #666;
    text-align: center;
  }

  .modal-footer > view:last-child {
    border-left: 1px solid #dedede;
    color: #ec5300;
  }

  