.index_container {
  width: 100%;
}

#index_header {
  width: 100%;
  font-size: 16px;
  padding: 20px 0;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索栏 */
#index_search_bar {
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 220rpx 0px 30rpx 5%;
}

#index_search_bar > view {
  display: flex;
  align-items: center;
  justify-content: center;
}

#index_search_bar > view:first-child > picker {
  border: 1px solid gray;
  padding: 5px;
  border-radius: 8px;
}

#index_search_bar > view:last-child {
  width: 50%;
  margin-left: 20px;
  border-bottom: 1px solid gray;
} 

#index_search_bar > view:last-child > image {
  width: 20px;
  height: 20px;
  margin-right: 3px;
}
#index_search_bar > view:last-child > input {
  width: 90%;
}

/* 添加患者栏 */
#index_add_patient {
  width: 90%;
  margin-left: 5%; 
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* border: 1px solid gray; */
  /* border: 1px solid #539af0; */
  padding: 4px 0;
  margin-bottom: 10px;
}
#index_add_patient > view {
  display: flex;
  align-items: center;
  justify-content: center;
}
#index_add_patient > view > image {
  width: 18px;
  height: 18px;
  margin-right: 7px;
}
#index_add_patient > view:last-child > text {
  font-size: 12px;
  color: #539af0
}
/* 患者列表 */
#index_patient_list {
  width: 90%;
  margin-left: 5%;
}

#index_empty_list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
#index_empty_list > image {
  width: 100px;
  height: 100px;
  margin: 50px 0 0 0;
}
#index_loading_list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
}
#index_loading_list > image {
  width: 300px;
  height: 300px;
  margin: 10px 0;
}

/* 加载到底部的footer */
.patient_list_content {
  margin-bottom: 6px;
}

.loading_over_footer {
  width: 100%;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 6px 0;
  background-color: #DCDCDC;
  font-size: 12px;
}