.login_container {
  width: 90%;
  margin-left: 5%;
}

.login_container > image {
  width: 100%;
  max-height: 200px;
}

#login_header {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 12px 0;
}
#login_header > text{
  font-size: 24px;
}

/* 登录部分 */
#login_form {
  width: 100%;
}
#login_form > view {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 10px 0;
}
#login_form > view:first-child {
  border-bottom: 1px solid gray;
}

#login_form > view > image {
  width: 30px;
  height: 30px;
  margin-right: 6px;
}
#login_form > view > text {
  width: 70px;
  font-size: 20px;
}
#login_form > view > input {
  width: 100%;
}

.login_container > button:first-child {
  margin-top: 20px;
}

#sperate_view {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx 0;
}
#sperate_view > text {
  font-size: 16px;
}
#cancel_bind_view {
  margin-top: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: gray;
}
/* 微信登录 */
.wx_login_button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}
.wx_login_button > image {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}