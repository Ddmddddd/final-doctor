.manage_content {
    width: 90%;
    margin-left: 5%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.manage_content > image {
    width: 22px;
    height: 22px;
}

.schedule_detail > text:first-child{
    font-size: 14px;
}

.schedule_detail > text:last-child {
    font-size: 12px;
    color: gray;
}

.education > view:not(:first-child) {
    width: 90%;
    margin-left: 5%;
    font-size: 16px;
}

.blood_pressure > view:not(:first-child) {
    width: 90%;
    margin-left: 5%;
}
ec-canvas {
    display: block;
    width: 100%;
    height: 220px;
}

/* 患者标签 */
.patient_tag_container {
    width: 90%;
    padding: 10px 0 0 5%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
}

#patient_tag_add {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #33ccff;
    border-radius: 10px;
    margin-bottom: 10px;
    padding: 2px;
}

#patient_tag_add > image {
    width: 10px;
    height: 10px;
    margin: 5px;
}

#patient_tag_add > text {
    font-size: 16px;
    margin-right: 6px;
    padding-top: 4px;
    padding-bottom: 4px;
}

#evaluatelab {
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #33ccff;
    border-radius: 10px;
    margin-bottom: 10px;
    padding: 2px;
    font-size:18px;
}

#evaluatelab > image{
  width:15px;
  height:15px;
  margin:2px;
}

#evaluatelab>text{
  font-size:18px;
  margin-right: 3px;
  padding-top: 2px;
  padding-bottom: 2px;
}