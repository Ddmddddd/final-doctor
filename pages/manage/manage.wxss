/* pages/manage/manage.wxss */
.patient-content{
    width: 100%;
    margin-top: 16vh;
}
.basic{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.basic > view:nth-child(2){
    height: 140rpx;
    display:flex;
    justify-content:center;
    align-items:center;
}
.title{
    width: 480rpx;
    font-size: 32rpx;
    /* padding-right: 20rpx; */
    padding: 6px 10px 6px 0;
    border: 1px solid #33ccff;
    border-right-width: 10rpx;
    border-left-width: 0;
    background-color: rgba(51, 204, 255, 0.65);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    margin-right: 40rpx;
}
.title > text:first-child{
    font-weight: 600;
    font-size: 40rpx;
}

.followup{
    display: flex;
    flex-direction: column;
}
.content{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
}
.followup .content > view:first-child{
    width: 70%;
    text-align: center;
    display: flex;
    justify-content: space-around;
}
.followup .content > view:nth-child(2){
    width:24%;
    display:flex;
    justify-content:space-around;
    align-items:center;
}
.manage_main_container > image,
.manage_main_container > view > image,
.manage_main_container > view > view > image, 
.manage_main_container > view > view > view > image {
    padding: 18rpx;
}
.tag{
    width: 70rpx;
    height: 40rpx;
    /* border: 1px solid #1195db; */
    box-shadow:0px 0px 1px 1px rgba(0, 191, 255, 0.7);
    font-size: 26rpx;
    line-height: 40rpx;
    text-align: center;
    color: white;
    /* background-color: #1195db; */
    border-radius: 5%;
    overflow: hidden;
    margin-left:30rpx;
}
.detail{
    width: 400rpx;
    padding: 0 12rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    display: flex;
    flex-direction: column;
    position: relative;
    align-items: flex-start;
    justify-content: flex-start;
}
