.patient-container{
    width: 100vw;
    margin-top: 14vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

#patient-edit-header {
    margin-top: 40rpx;
}
.patient-info{
    width: 90%;
    height: 100rpx;
    display: flex;
    /* flex-direction: column; */
    justify-content: flex-start;
    align-items: center;
    padding: 8rpx;
}
.patient-info > view:first-child{
    width: 40%;
    font-size: 32rpx;
    color: #808080;
    line-height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    /* padding-left: 12rpx; */
}
.patient-info > view:nth-child(2){
    width: 100%;
    height: 90rpx;
    border: 1px solid #ccc;
    border-radius: 6rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.patient-info > view > view:last-child {
    padding-left: 12px;
}
.button-group{
    width: 100%;
    height: 160rpx;
    padding: 10rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
.focus{
    border: 1px solid #1e90ff;
    box-shadow: #75b6f8 0 0 2px 1px;
}
input{
    width: 100%;
    height: 100%;
    padding: 0 12rpx 0 12rpx;

}
picker{
    width: 98%;
    height: 100%;
    display: flex;
    align-items: center;
}
.picker-item {
    flex-grow:1;
    width: 480rpx;
    height: 86rpx;
    line-height: 86rpx;
}
button{
    width: 220rpx;
    height: 80rpx;
    line-height: 80rpx;
}