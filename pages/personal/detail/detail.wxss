.personal_kno_detail {
  height: 100%;
  width: 94%;
  margin-left: 3%;
}

.personal_kno_detail > input {
  width: auto;
  height: auto;
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 20px;
  padding-bottom: 4px;
  border-bottom: 1px solid gray;
}

.personal_kno_detail > textarea {
  width: 100%;
  font-size: 18px;
  color: #0A0A0A;
  padding: 4px;
  min-height: 40vh;
}

.personal_tag_bar {
  width: 100%;
  margin-top: 20px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.personal_tag_bar > view {
  padding: 2px;
  border: 1px solid #aaa;
  box-shadow: 0px 0px 1px 1px  #aaa ;
  border-radius: 4px;
  margin-right: 8px;
  text-align: center;
}

/* 底部操作 */
.opt_container {
  width: 94%;
  position: absolute;
  bottom: 10px;
}

.opt_container > view {
  width: 100%;
}
.add_tag_button {
  padding: 6px 0;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.add_tag_button > text {
  font-size: 18px;
  padding-left: 5px;
  padding-right: 5px;
}

.update_del_bar {
  width: 100%;
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.update_del_bar > view {
  padding: 6px 0;
  border-radius: 10px; 
  text-align: center;
}
.update_del_bar > view:first-child {
  width: 88%;
  background: #ff0000;
  color: white;
  font-weight: bold;
  margin-bottom: 5px;
}

.update_del_bar > view:last-child {
  width: 88%;
  background: #19ad1a;
  color: white;
  font-weight: bold;
}