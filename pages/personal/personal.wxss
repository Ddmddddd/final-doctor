.personal_class_container {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.personal_class_header {
  width: 100%;
  text-align: right;
  font-size: 16px;
  color: blue
}

.class_card {
  width: 100%;
  padding: 10px 10px;
  margin-top: 10px;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  border: 1px solid #aaa;
  box-shadow: 0px 0px 3px 1px  #aaa ;
  border-radius: 5px;
  background-color: white;
}

.class_card_title {
  font-size: 18px;
}

.class_card_createTime {
  font-size: 14px;
  color: gray;
}

.class_card_delete > image {
  width: 20px;
  height: 20px;
}